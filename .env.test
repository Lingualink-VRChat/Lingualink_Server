# 服务器配置
HOST=0.0.0.0
PORT=5000
DEBUG=false

# LLM 服务配置
VLLM_SERVER_URL=http://192.168.8.6:8000
MODEL_NAME=qwenOmni7
API_KEY=abc123

# 文件上传配置
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=["wav"]

# 鉴权配置
AUTH_ENABLED=true
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (JSON格式的字符串数组)
# 生成新密钥: uv run generate-api-key
API_KEYS=["lls_example_key_replace_with_real_key"]

# 默认语言配置
DEFAULT_TARGET_LANGUAGES=["英文", "日文"]
DEFAULT_USER_QUERY=请处理下面的音频。 